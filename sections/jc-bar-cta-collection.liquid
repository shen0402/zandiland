<div class="bar-cta">
  <div class="container-large">
    <div class="bar-cta-flex-row">
      <h3 class="bar-cta-heading-collection">{{section.settings.heading_text}}</h3>
      <a href="{{section.settings.link_url}}" class="bar-cta-flex-link w-inline-block">
        <div>{{section.settings.link_text}}</div><img src="//cdn.shopify.com/s/files/1/0004/5829/3310/files/arrow-b-min-new.png" alt="Arrow" class="bar-cta-flex-img"></a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Black Bar Collection" ,
  "settings": [	
      {
         "type": "text",
         "id": "heading_text",
         "default": "WANT TO MARKET ONLINE?",
         "label": "Heading Text"
      },
      {
         "type": "text",
         "id": "link_text",
         "default": "Download cool stuff from our marketing library",
         "label": "Link Text"
      },
      {
         "type": "url",
         "id": "link_url",
         "label": "Link URL"
      }
     
  ]
}
{% endschema %}