
<div class="hero-wrapper-collection" style="  background-image: url(https://cdn.shopify.com/s/files/1/0004/5829/3310/collections/all-product-hero-min_1800x.jpg?v=1652753844);">

	<div class="hero-content-wrapper-collection">
	  <div class="hero-container-collection">
		<div class="hero-flex-row-collection">
		  <div class="hero-heading-col-collection" data-ix="fadeinright">
			<h1 class="w-basic-heading hero-main-heading-collection">{{section.settings.main_heading}}<br><span class="hero-heading-alt-collection">{{section.settings.sub_heading}}</span></h1>
		  </div>
		  {% unless collection.description == blank %}
			  <div class="hero-content-col-collection" data-ix="fadeinleft">
				<div class="hero-text-wrapper-collection">
				  <div class="hero-text-collection">
					{{collection.description}}
				  </div>
				</div>
			  </div>
		  {% endunless %}
		</div>
	  </div>
	</div>
	<div class="hero-overlay"></div>
</div>

{% schema %}
{
  "name": "Bundles Hero",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "default": "Bundles",
      "label": "Heading Text"
    },
    {
        "type": "text",
        "id": "sub_heading",
        "default": "Collection",
        "label": "Sub Heading"
      }
  ]
}
{% endschema %}