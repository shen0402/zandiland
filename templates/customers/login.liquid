<div class="hero-wrapper-login-bg-img">
  <div class="hero-content-wrapper-login">
    <div class="hero-container-login">
      <div class="hero-content-inner-login-new">
        {% comment %}
        <div class="hero-logo-wrapper-login"><img src="//cdn.shopify.com/s/files/1/0004/5829/3310/files/zk-professional-logo-b-min.png" loading="lazy" alt="Zandi K Professional" class="hero-logo-img-login"></div>
        {% endcomment %}
        <div class="form-block-login w-form">

           {% form 'customer_login' %}
           <input type="hidden" name="checkout_url" value="/" />
           {{ form.errors | default_errors }}
           <h1 class="hero-heading-login">Professional Login</h1><input type="email" class="form-input-login w-input" maxlength="256" name="customer[email]" placeholder="Email" id="email" required=""><input type="password" class="form-input-login form-input-login-no-margin w-input" maxlength="256" name="customer[password]" placeholder="Password" id="customerPassword" required="">
           <div class="form-forgot-link-holder">
             <a href="#" class="form-forgot-pw-link w-inline-block" data-ix="show-pw-form">
               <div>Forgot Your Password?</div>
             </a>
           </div>
           <div class="form-btn-wrapper-login"><input type="submit" value="Login" data-wait="Please wait..." class="btn-main w-button"></div>
           <div class="form-bottom-wrapper-login">
           </div>
           {% endform %}   

        </div>
        <div class="form-block-forgot-pw w-form">

          {% form 'recover_customer_password' %}
          {{ form.errors | default_errors }}
          
            <div class="form-heading-forgot-pw">Enter your email address and we will send you an email with instructions on how to reset your password.</div><input type="email" class="form-input-login w-input" maxlength="256" name="email"  placeholder="Email" id="RecoverEmail" required="">
            <div class="form-btn-wrapper-login"><input type="submit" value="Submit" data-wait="Please wait..." class="btn-main w-button"></div>
            <div class="form-cancel-wrapper-login">
              <a href="#" class="form-cancel-link-login w-inline-block" data-ix="hide-pw-form">
                <div>Cancel</div>
              </a>
            </div>
            {% if form.posted_successfully? %} <script> window.location = "https://zandilandprofessional.com/pages/password-reset-success"; </script> 
            {% endif %}
          {% endform %}


        </div>
      </div>
    </div>
  </div>
  <div class="bar-cta-login">
    <div class="container-large">
      <div class="bar-cta-flex-row">
        <h2 class="bar-cta-heading">DON'T HAVE A LOGIN YET?</h2>
        <a href="/?apply" class="bar-cta-flex-link w-inline-block">
          <div>Apply Now</div><img src="//cdn.shopify.com/s/files/1/0004/5829/3310/files/arrow-b-min-new.png" alt="Arrow" class="bar-cta-flex-img"></a>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() { 

    var url = window.location.href;
    if (url == 'https://zandikprofessional.com/account/login?recover') {

      $('.form-block-forgot-pw').css('display','block');
      $('.form-block-login').css('display','none');

    }

    console.log('');

   });
</script>





